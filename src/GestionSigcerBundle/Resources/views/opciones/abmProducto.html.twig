{% extends "FOSUserBundle::layout.html.twig" %}
{% block fos_user_content %}
<br>
<hr>
<span class="h5 card-title">Nuevo Producto</span>
<hr>
{% for message in app.flashes('sussecc') %}
	<div class="alert alert-success" role="alert">
	  {{ message }}
	</div>
{% endfor %}

<div class="">
	{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-row">
      <div class="col-4">
        {{ form_label(form.nombre) }}
        {{ form_widget(form.nombre) }}
      </div>
      <div class="col-4">
        {{ form_label(form.marca) }}
        {{ form_widget(form.marca) }}
      </div>
      <div class="col-4">
        {{ form_label(form.codigoCapa, 'Codigo CAPA') }}
        {{ form_widget(form.codigoCapa) }}
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        {{ form_widget(form.guardar) }}
      </div>
    </div>
	{{ form_end(form) }}
    <br>
    <span class="h5">Productos Existentes</span>
    <hr>
    <table class="table table-striped table-bordered table-hover table-sm ">
        <thead>
          <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Codigo CAPA</th>
          </tr>
        </thead>
        <tbody>
          {% for p in productos %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ p.nombre }}</td>
                <td>{{ p.marca }}</td>
                <td>{{ p.codigoCapa }}</td>
            </tr>
          {% endfor %}
        </tbody>
    </table>
</div>
{% endblock fos_user_content %}
