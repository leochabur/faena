{% extends "FOSUserBundle::layout.html.twig" %}
{% block fos_user_content %}
<br>
<hr>
<span class="h5 card-title">Multiples modificaciones</span>
<hr>
  {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-row">
      <div class="col-2">
        {{ form_label(form.zona, 'Region') }}
        {{ form_widget(form.zona) }}
      </div>
      <div class="col-3">
        {{ form_label(form.grupo, 'Fecha Solicitudes') }}
        {{ form_widget(form.grupo) }}
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        {{ form_widget(form.load) }}
      </div>
    </div>
  {{ form_end(form) }}
  <hr>
  <h4>Solicitudes Region: {{ region }}</h4>
  <hr>
    {% if solicitudes is defined %}
        <table class="table table-striped table-bordered table-hover table-sm ">
            <thead>
              <tr>
                <th>Zona</th>
                <th>Articulo</th>
                <th>
                          <div  class="form-row">
                            <div class="col-2">Cant.</div>
                            <div class="col-2">P. Bruto</div>
                            <div class="col-2">P. Neto</div>
                            <div class="col-2"></div> 
                          </div>
                </th>
              </tr>
            </thead>
            <tbody>
              {% set last = 0 %}
              {% for s in solicitudes %}
                {% for d in s.detalles %}
                  <tr>
                      <td>
                          {% if last != s.zona.codigo %}
                            {{ s.zona.codigo }}
                            {% set last = s.zona.codigo %}
                          {% endif %}
                      </td>
                      <td>{{ d.articulo }}</td>
                      {{ form_start(formUpd[d.id], {'attr' : {'class' : 'upd', 'novalidate' : 'novalidate'}} ) }}
                      <td class="text-right">
                          <div  class="form-row text-right">
                            <div class="col-2">{{ form_widget(formUpd[d.id].cant, {'attr' : {'class' : 'form-control form-control-sm'}}) }}</div>
                            <div class="col-2">{{ form_widget(formUpd[d.id].pbruto, {'attr' : {'class' : 'form-control form-control-sm'}}) }}</div>
                            <div class="col-2">{{ form_widget(formUpd[d.id].pneto, {'attr' : {'class' : 'form-control form-control-sm'}}) }}</div>
                            <div class="col-2">{{ form_widget(formUpd[d.id].load, {'attr' : { 'class' : 'btn btn-warning btn-sm'}}) }}</div> 
                          </div>
                      </td>
                      {{ form_end(formUpd[d.id]) }}
                  </tr>
                {% endfor %}
              {% endfor %}
            </tbody>
        </table>
      {% endif %}
    <div>
        <a href="{{ path('sigcer_add_grupos_solicitudes') }}" class="btn btn-success"><< Volver</a>
    </div>
{% endblock fos_user_content %}

{% block javascripts %}
 {{ parent() }}
<script type="text/javascript">

          $('.upd').submit(function(event){
                                            event.preventDefault();
                                            var form = $(this);
                                            var route = form.attr('action');
                                            $.post(route,
                                                   form.serialize(),
                                                   function(data){
                                                                  if (data.status)
                                                                      alert('Actualizacion realizada exitosamente!!')
                                                                  else
                                                                      alert(data.message);
                                                   });
                                            
          });
</script>

{% endblock  %}
