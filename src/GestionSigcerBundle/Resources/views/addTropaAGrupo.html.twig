{% extends "FOSUserBundle::layout.html.twig" %}
{% block fos_user_content %}
<br>
<hr>
<span class="h5 card-title">Agregar Tropa</span>
<hr>
{% for message in app.flashes('sussecc') %}
	<div class="alert alert-success" role="alert">
	  {{ message }}
	</div>
{% endfor %}

<div class="">
	{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-row">
      <div class="col-4">
        {{ form_label(form.grupoSolicitud, 'Solicitudes de fecha:') }}
        {{ form_widget(form.grupoSolicitud) }}
      </div>
    </div>
    <br>
    <div class="form-row">
      <div class="col-3">
        {{ form_label(form.fechaCongelado) }}
        {{ form_widget(form.fechaCongelado) }}
      </div>
      <div class="col-3">
        {{ form_label(form.fechaElaboracion) }}
        {{ form_widget(form.fechaElaboracion) }}
      </div>
      <div class="col-3">
        {{ form_label(form.fechaFaena) }}
        {{ form_widget(form.fechaFaena) }}
      </div>
      <div class="col-3">
        {{ form_label(form.fechaVto) }}
        {{ form_widget(form.fechaVto) }}
      </div>
    </div>
    <div class="form-row">
      <div class="col-3">
        {{ form_label(form.numeroTropa) }}
        {{ form_widget(form.numeroTropa) }}
      </div>
      <div class="col-3">
        {{ form_label(form.lote) }}
        {{ form_widget(form.lote) }}
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        {{ form_widget(form.guardar) }}
      </div>
    </div>
	{{ form_end(form) }}
    <br>
</div>
    <hr>
    <span class="h5">Tropas Asigmnadas a la Solicitud</span>
    <hr>
    <table class="table table-striped table-bordered table-hover table-sm ">
        <thead>
          <tr>
            <th>#</th>
            <th>Fecha Congelado</th>
            <th>Fecha Elaboracion</th>
            <th>Fecha Faena</th>
            <th>Fecha Vencimiento</th>
            <th>Nro. Tropa</th>
            <th>Lote</th>
          </tr>
        </thead>
        <tbody>
          {% for p in grupo.tropas %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ p.fechaCongelado|date('d/m/Y') }}</td>
                <td>{{ p.fechaElaboracion|date('d/m/Y') }}</td>
                <td>{{ p.fechaFaena|date('d/m/Y') }}</td>
                <td>{{ p.fechaVto|date('d/m/Y') }}</td>
                <td>{{ p.numeroTropa }}</td>
                <td>{{ p.lote }}</td>
            </tr>
          {% endfor %}
        </tbody>
    </table>
    <div>
        <a href="{{ path('sigcer_add_grupos_solicitudes') }}" class="btn btn-success"><< Volver</a>
    </div>
{% endblock fos_user_content %}
